@inherits MudComponentBase

<MudToolBar @attributes="UserAttributes" Class="@Classname" Style="@Style">
	<MudText Typo="Typo.body2" Class="mud-table-pagination-caption">
		@SelectionText 
	</MudText>
	<div class="mud-table-pagination-spacer"></div>
	@if (!DisablePageSizeSelection)
	{
		<MudText Typo="Typo.body2" Class="mud-table-pagination-caption">
			@RowsPerPageString @this.PageSize
		</MudText>
		<MudSelect T="ushort" ValueChanged="SetRowsPerPage" Value="@((ushort)(this.PageSize))" Class="mud-table-pagination-select" DisableUnderLine="true" Dense="true">
			@foreach (var pageSize in PageSizeOptions)
			{
				<MudSelectItem T="ushort" Value="@pageSize">@pageSize</MudSelectItem>
			}
		</MudSelect>
	}
	<MudText Typo="Typo.body2" Class="mud-table-pagination-caption">
		@Info
	</MudText>
	<div class="mud-table-pagination-actions">
		<MudButtonGroup Color="Color.Primary" Variant="Variant.Text">
			@if (ShowFirstButton)
			{
				<MudButton OnClick="() => OnPageChange(1)">1</MudButton>
				<MudButton Disabled="true">...</MudButton>
			}

			@foreach (var pageNumber in GetButtons())
			{
				if (pageNumber == this.PageNumber)
				{
					<MudButton Style="color: black" Disabled="true">@pageNumber</MudButton>
				}
				else
				{
					<MudButton OnClick="() => OnPageChange(pageNumber)">@pageNumber</MudButton>
				}
			}

			@if (ShowLastButton)
			{
				<MudButton Disabled="true">...</MudButton>
				<MudButton OnClick="() => OnPageChange(LastPageNumber)">@LastPageNumber</MudButton>
			}
		</MudButtonGroup>
	</div>
</MudToolBar>