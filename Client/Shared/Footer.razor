<footer>
    <div class="footer-icons">
        <a href="https://github.com/Code-Chops" target="_blank">
            <span class="fa fa-github" aria-hidden="true"></span>
        </a>
        <a href="#">
            <span class="fa fa-linkedin" aria-hidden="true"></span>
        </a>
    </div>
    <span title="@(Version is not null ? $"Version {Version}" : null)" class="footer-text"> ©️ @DateTime.Now.Year @Branding.Name</span>
