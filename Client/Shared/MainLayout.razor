@inherits LayoutComponentBase

<div class="page">
    <MenuBar 
            BackgroundColor="black"
            AccentColor=@Branding.Color.Accent
            TextColor="white"
            FontFamily=@Branding.FontFamily 
            LogoPath="/favicon.ico" 
            Title=@Branding.Name 
            ShowTitle=ShowTitle
            Height="80" 
            ShowLogo="false">
        <MenuButton FontAwesomeIcon="fa-th-large" HRef="/">Game</MenuButton>
        <MenuButton FontAwesomeIcon="fa-image">Save Image</MenuButton>
        <MenuButton FontAwesomeIcon="fa-image">Save Image</MenuButton>
        <MenuButton FontAwesomeIcon="fa-image">Save Image</MenuButton>
        <MenuButton FontAwesomeIcon="fa-user-circle" HRef="/about">About</MenuButton>
    </MenuBar>
    <div class="border"></div>
    <main>
        @Body           
    </main>
</div>

@code
{
    [CascadingParameter] protected bool ShowTitle { get; set; } = true;
}