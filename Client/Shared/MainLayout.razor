@inherits LayoutComponentBase
@using CodeChops.Website.RazorComponents.Navigation;
@using static CodeChops.Website.RazorComponents.Navigation.MenuButton

<div class="page">
    <MenuBar 
            BackgroundColor="black"
            AccentColor=@Branding.Color.Accent
            TextColor="white"
            FontFamily=@Branding.FontFamily 
            LogoPath="/favicon.ico" 
            Title=@Branding.Name 
            ShowTitle=ShowTitle
            Height="80" 
            ShowLogo="false"
            Buttons=Buttons />

    <div class="border"></div>

    <main>
        @Body           
    </main>
</div>

@code
{
    [CascadingParameter] protected bool ShowTitle { get; set; } = true;
    private ICollection<MenuButtonData> Buttons { get; } = new MenuButtonData[]
        {
            new() { FontAwesomeIcon="fa-th-large",      HRef="/",       Text="Game" },
            new() { FontAwesomeIcon="fa-image",         HRef="/",       Text="Save Image" },
            new() { FontAwesomeIcon="fa-image",         HRef="/",       Text="Save Image" },
            new() { FontAwesomeIcon="fa-image",         HRef="/",       Text="Save Image" },
            new() { FontAwesomeIcon="fa-user-circle",   HRef="/about",  Text="About" },
        };
}