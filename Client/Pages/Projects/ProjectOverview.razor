@implements IDisposable
@page "/Projects"

<Content >
	<span class="title text-center">
		<Title Value="@Resource.Title"></Title>
	</span>
	<div class="grid">
		<ProjectThumbnail ImagePath="images/projects/VendingMachine.png"			Title="@Resource.VendingMachine_Title"			Text="new(Resource.VendingMachine_Text)" />
		<ProjectThumbnail ImagePath="images/projects/MagicEnums.png"				Title="@Resource.MagicEnums_Title"				Text="new(Resource.MagicEnums_Text)" />
		<ProjectThumbnail ImagePath="images/projects/Crossfade.png"					Title="@Resource.Crossfade_Title"				Text="new(Resource.Crossfade_Text)" />
		<ProjectThumbnail ImagePath="images/projects/ImplementationDiscovery.png"	Title="@Resource.ImplementationDiscovery_Title"	Text="new(Resource.ImplementationDiscovery_Text)" />
	</div>
</Content>

@code {
	public IProjectsResource Resource { get; set; } = IProjectsResource.Get();
	
	protected override void OnInitialized()
	{
		LanguageSelector.ChangedEvent += OnLanguageChanged;
	}

	private void OnLanguageChanged()
	{
		Resource = IProjectsResource.Get();
		StateHasChanged();
	}
	
	public void Dispose()
	{
		LanguageSelector.ChangedEvent -= OnLanguageChanged;
	}
}