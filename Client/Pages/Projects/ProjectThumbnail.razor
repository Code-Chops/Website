@using CodeChops.Website.Client.Pages.Projects
@using System.Text
@using Microsoft.Extensions.Caching.Memory

<a class="project" href="/projects/" style="visibility: @(IsInitialized ? "visible" : "hidden")">
	<div class="text">
		<h4>@Title</h4>
		<span class="small-screen-hide">@Text</span>
	</div>
	<span class="image-container border show">
		<img class="image noSelect" src=@ImagePath alt=@Title />
	</span>
</a>

@code {
	[Parameter] public string Title { get; set; } = null!;
	[Parameter] public MarkupString Text { get; set; }
	[Parameter] public string? ImagePath { get; set; }

	private bool IsInitialized { get; set; } = true;
	
	protected override void OnInitialized()
    {
        LanguageSelector.ChangedEvent += StateHasChanged;
}
}