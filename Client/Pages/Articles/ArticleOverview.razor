@implements IDisposable
@page "/Articles"

<Content>
	<Box>
		<Title Value="@Resource.Title" />
		<Box>
			<Article_ImplicitUsings/>
		</Box>
		<Box>
			<Article_ImplicitUsings/>
		</Box>
	</Box>
</Content>

@code {
	public static IArticlesResource Resource { get; set; } = IArticlesResource.Get();
	
	protected override void OnInitialized()
	{
		LanguageSelector.ChangedEvent += OnLanguageChanged;
	}

	private void OnLanguageChanged()
	{
		Resource = IArticlesResource.Get();
		StateHasChanged();
	}
	
	public void Dispose()
	{
		LanguageSelector.ChangedEvent -= OnLanguageChanged;
	}
}