@using Microsoft.Extensions.Localization
@inherits LayoutComponentBase
@using static CodeChops.Website.RazorComponents.Navigation.MenuButton

<div class="page">
    <MenuBar @ref=MenuBar
            BackgroundColor=@new(ColorName.Black)
            AccentColor=@Branding.Colors.Accent
            TextColor=@new((byte)255, (byte)255, (byte)255)
            HRefColor=@(Branding.Colors.Accent.GetWhiterColor())
            FontFamily=@Branding.FontFamily 
            LogoPath="/favicon.ico" 
            Title=@Branding.Name 
            ShowTitle=ShowTitle
            Height="80" 
            ShowLogo="false"
            Buttons=Buttons>
        
            <LanguageSelector />
    </MenuBar>

    <div class="border"></div>

    <main>
        @Body           
    </main>
</div>

@code
{
    [CascadingParameter] protected bool ShowTitle { get; set; } = true;
    internal static ColorMode ColorMode { get; set; }
    private MenuBar MenuBar { get; set; } = null!;
    private ICollection<MenuButtonData> Buttons { get; set; } = null!;

    protected override void OnInitialized()
    {
        OnLanguageChanged();
        LanguageSelector.LanguageChangedEvent += this.OnLanguageChanged;
    }

    private void OnLanguageChanged()
    {
        this.Buttons = new MenuButtonData[]
            {
                new() { HRef="/",           Text=Pages.Home.HomeResource.Title },
                new() { HRef="/projects",   Text=Pages.Projects.ProjectsResource.Title },
                new() { HRef="/about",      Text=Pages.About.AboutResource.Title },
            };
        this.StateHasChanged();
    }
}