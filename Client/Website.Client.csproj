<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">
    
    <PropertyGroup Label="Main">
        <AssemblyName>CodeChops.Website.Client</AssemblyName>
        <RootNamespace>CodeChops.Website.Client</RootNamespace>
        <Version>0.14.1</Version>
        <TargetFramework>net7.0</TargetFramework>
        <LangVersion>11</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
        <EnablePreviewFeatures>true</EnablePreviewFeatures>
    </PropertyGroup>
    
    <PropertyGroup Label="Blazor">
        <BlazorWebAssemblyLoadAllGlobalizationData>false</BlazorWebAssemblyLoadAllGlobalizationData>
        <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>
        <BlazorWebAssemblyPreserveCollationData>false</BlazorWebAssemblyPreserveCollationData>
        <PublishTrimmed>true</PublishTrimmed>
        <BlazorWebAssemblyEnableLinking>true</BlazorWebAssemblyEnableLinking>
        <BlazorWebAssemblyI18NAssemblies>none</BlazorWebAssemblyI18NAssemblies>
        <TrimmerRemoveSymbols>true</TrimmerRemoveSymbols>
        <DebuggerSupport>false</DebuggerSupport>
        <EnableUnsafeBinaryFormatterSerialization>false</EnableUnsafeBinaryFormatterSerialization>
        <EnableUnsafeUTF7Encoding>false</EnableUnsafeUTF7Encoding>
        <EventSourceSupport>false</EventSourceSupport>
        <HttpActivityPropagationSupport>false</HttpActivityPropagationSupport>
        <InvariantGlobalization>true</InvariantGlobalization>
        <MetadataUpdaterSupport>false</MetadataUpdaterSupport>
        <UseNativeHttpHandler>true</UseNativeHttpHandler>
        <UseSystemResourceKeys>true</UseSystemResourceKeys>
    </PropertyGroup>
    
    <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="CodeChops.DomainDrivenDesign.DomainModeling" Version="1.4.3" />
        <PackageReference Include="CodeChops.MagicEnums" Version="3.1.0" />
        <PackageReference Include="ColorHelper" Version="1.8.0" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.0" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.AspNetCore.Localization" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" />
		<PackageReference Include="CodeChops.ImplementationDiscovery" Version="0.35.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\RazorComponents\RazorComponents\RazorComponents.csproj" />
	</ItemGroup>

    <ItemGroup>
        <ServiceWorker Include="wwwroot\scripts\service-worker.js" PublishedContent="wwwroot\scripts\service-worker.published.js" />
    </ItemGroup>

    <ItemGroup>
        <Content Update="wwwroot\scripts\CodeChops.js">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="Properties\icon.png" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="Pages\Projects\Resources\ProjectImages.Designer.cs" />
      <Compile Remove="Resources\Resource.cs" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="Pages\Projects\Resources\ProjectImages.resx" />
    </ItemGroup>

    <PropertyGroup Label="Configuration" Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
      <TypeScriptSourceMap>False</TypeScriptSourceMap>
      <DebugType>none</DebugType>
    </PropertyGroup>
</Project>
