<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
	  <Nullable>enable</Nullable>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <AnalysisLevel>latest</AnalysisLevel>
	  <AssemblyName>Website.Client</AssemblyName>
	  <RootNamespace>CodeChops.Website.Client</RootNamespace>
	  <Version>0.4.0</Version>
	  <LangVersion>10</LangVersion>
	  <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
      <BlazorWebAssemblyLoadAllGlobalizationData>true</BlazorWebAssemblyLoadAllGlobalizationData>
	  <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>
	  <RunAOTCompilation>true</RunAOTCompilation>
	  <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
	<None Include="wwwroot\css\app.css" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\css\CodeChopsSplash.css" />
  </ItemGroup>

  <ItemGroup>
	<PackageReference Include="ColorHelper" Version="1.6.1" />
	<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.2" />
	<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.2" PrivateAssets="all" Condition="'$(Configuration)' == 'Debug'"/>
	<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="6.0.2" />
	<PackageReference Include="Microsoft.AspNetCore.Localization" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <!--<PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />-->
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Update="**/Resources/*.resx" />
  </ItemGroup>
	
  <ItemGroup>
    <ProjectReference Include="..\RazorComponents\RazorComponents\RazorComponents.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ServiceWorker Include="wwwroot\scripts\service-worker.js" PublishedContent="wwwroot\scripts\service-worker.published.js" />
  </ItemGroup>

	<PropertyGroup>
		<ResXFileCodeGenerator_UseVocaDbResManager>true</ResXFileCodeGenerator_UseVocaDbResManager>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Update="Pages\About\AboutResource.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>AboutResource.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Pages\Articles\ArticlesResource.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>ArticlesResource.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Pages\Home\HomeResource.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>HomeResource.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Pages\Projects\ProjectsResource.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>ProjectsResource.resx</DependentUpon>
	  </Compile>
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Update="Pages\About\AboutResource.zh.resx">
		  <SubType>Designer</SubType>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\About\AboutResource.nl.resx">
			<SubType>Designer</SubType>
			<Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\About\AboutResource.resx">
		  <Generator>ResXFileCodeGenerator</Generator>
		  <LastGenOutput>AboutResource.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Articles\ArticlesResource.zh.resx">
		  <Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Articles\ArticlesResource.nl.resx">
			<SubType>Designer</SubType>
			<Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Articles\ArticlesResource.resx">
		  <Generator>ResXFileCodeGenerator</Generator>
		  <LastGenOutput>ArticlesResource.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Home\HomeResource.zh.resx">
		  <Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Home\HomeResource.nl.resx">
			<SubType>Designer</SubType>
			<Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Home\HomeResource.resx">
		  <Generator>ResXFileCodeGenerator</Generator>
		  <LastGenOutput>HomeResource.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Projects\ProjectsResource.zh.resx">
		  <Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Projects\ProjectsResource.nl.resx">
			<SubType>Designer</SubType>
			<Generator></Generator>
		</EmbeddedResource>
		<EmbeddedResource Update="Pages\Projects\ProjectsResource.resx">
		  <Generator>ResXFileCodeGenerator</Generator>
		  <LastGenOutput>ProjectsResource.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

  <PropertyGroup>
  	<!-- CA1822: Instance member does not access instance data and can be marked as static -->
  	<!-- CS1573: Undocumented public symbol while -doc compiler option is used -->
  	<!-- CS1591: Missing XML comment for publicly visible type -->
  	<!-- CA1816: Dispose() should call GC.SuppressFinalize()-->
  	<NoWarn>CA1822,CS1573,CS1591,CA1816</NoWarn>
  </PropertyGroup>
</Project>
